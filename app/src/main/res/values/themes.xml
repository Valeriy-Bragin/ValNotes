<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Notepad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_brown</item>
        <item name="colorPrimaryVariant">@color/black_brown_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tan</item>
        <item name="colorSecondaryVariant">@color/tan_dark</item>
        <item name="colorOnSecondary">@color/black_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Notepad.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Notepad.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Notepad.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fab_labels_style">
        <item name="android:background">@drawable/fab_labels_background</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ListItemTitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ExpandedListItemContentText">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ReducedListItemContentText">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ListItemInfoText">
        <item name="android:textSize">11sp</item>
        <item name="android:alpha">0.6</item>
    </style>
</resources>